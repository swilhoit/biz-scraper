rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to business listings for all users
    match /business_listings/{listing} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email.matches(".*@.*\\.iam\\.gserviceaccount\\.com");
    }
    
    // Scraper runs are read-only for users, write for service accounts
    match /scraper_runs/{run} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email.matches(".*@.*\\.iam\\.gserviceaccount\\.com");
    }
    
    // Orchestration logs
    match /orchestrations/{orchestration} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email.matches(".*@.*\\.iam\\.gserviceaccount\\.com");
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}